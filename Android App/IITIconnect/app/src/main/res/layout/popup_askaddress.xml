<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:id="@+id/popup"
    android:layout_height="match_parent"
    android:padding="9dp"
    android:background="#dddddd">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="please enter your current location,  so that you can receive warning or security alerts based on your LOCATION"
        android:id="@+id/textView4"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_gravity="center_horizontal" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/setAddressEdt"
        android:layout_gravity="center_horizontal" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="set location"
        android:id="@+id/setAddressBut"
        android:layout_gravity="right" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="How this works?" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Every wifi router has an unique mac address and this app uses that to find address \nFirst user who ever connects to an unknown wifi will be asked to enter the location so that our app can know ur position on which wifi u are connected to"
        android:id="@+id/textView5" />

</LinearLayout>